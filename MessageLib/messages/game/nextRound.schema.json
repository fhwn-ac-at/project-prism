{
    "$schema": "https://json-schema.org/draft-07/schema",

    "type": "object",
    "properties": {
      "header": {
        "allOf": [
            {
                "$ref": "../global.definitions.schema.json#definitions/messsageHeader"
            },
            {
                "type": "object",
                "properties": {
                    "type": {
                        "const": "nextRound"
                    }
                }
            }
        ]
      },
      "body": {
        "type": "object",
        "properties": {
          "word": {
            "type": "string"
          },
          "round": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": [
          "word",
          "round"
        ],
        "additionalProperties": false
      }
    },
    "required": [
        "header", 
        "body"
    ],
    "additionalProperties": false
}