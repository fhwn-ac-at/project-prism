{
    "$schema": "https://json-schema.org/draft-07/schema",

    "type": "object",
    "properties": {
      "header": {
        "allOf": [
            {
                "$ref": "../global.definitions.schema.json#definitions/messsageHeader"
            },
            {
                "type": "object",
                "properties": {
                    "type": {
                        "const": "setDrawer"
                    }
                }
            }
        ]
      },
      "body" : {
        "type": "object",
        "properties": {
            "words": {
                "type": "array",
                "additionalItems": false,
                "items": {
                    "type": "object",
                    "properties": {
                        "word": {
                            "type": "string"
                        },
                        "difficulty": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 2
                        }
                    },
                    "required": [
                        "word",
                        "difficulty"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "required": [
            "words"
        ],
        "additionalProperties": false
      }
    },
    "required": [
        "header", 
        "body"
    ],
    "additionalProperties": false
}