{
    "$schema": "https://json-schema.org/draft-07/schema",

    "type": "object",
    "properties": {
      "header": {
        "allOf": [
            {
                "$ref": "../global.definitions.schema.json#/definitions/messsageHeader"
            },
            {
                "type": "object",
                "properties": {
                    "type": {
                        "const": "userScore"
                    }
                }
            }
        ]
      },
      "body" : {
        "type": "object",
        "properties": {
            "score": {
                "type": "integer",
                "minimum": 0
            },
            "user": {
                "$ref": "../global.definitions.schema.json#/definitions/user"
            }
        },
        "required": [
            "text",
            "user"
        ],
        "additionalProperties": false
      }
    },
    "required": [
        "header", 
        "body"
    ],
    "additionalProperties": false
}